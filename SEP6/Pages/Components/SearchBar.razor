@page "/search"
@namespace SearchComponent
@inject IHttpClientFactory _clientFactory
@inject NavigationManager NavigationManager
@inject IMovieService movieService

@using Newtonsoft.Json;
@using SEP6.Data;
@using SEP6.Models


<AuthorizeView>
    <Authorized>
<div class="search-container">
    <input type="text" placeholder="Search.." @bind-value="searchedMovie" />
 <div style="color:red">@errorMessage</div>
    <button type="submit" @onclick="SearchMovies"><i class="">search</i></button>
</div>
    </Authorized>
</AuthorizeView>
@code {
    [Parameter]
    public string searchedMovie { get; set; }
    public string errorMessage;
    public Movies movies { get; set; }
    public List<Movies> moviesList { get; set; }

    public async Task SearchMovies()
    {
        moviesList = await movieService.IndexMovie(searchedMovie);
        NavigationManager.NavigateTo($"/searchresults?movies={Uri.EscapeDataString(JsonConvert.SerializeObject(moviesList))}");

    }
}