@page "/index"
@using SEP6.Data;
@using SEP6.Models;
@using SEP6.Pages;
@inject HttpClient httpClient
@inject IMovieService movieService;

<style>
    #MoviesTitleIndex {
        text-align: center;
    }

    .card {
        height: 500px;
        width: 300px;
    }

    #posters {
        margin: auto;
        margin-top: 15px;
        height:500px;
        width:300px;
    }

    .card-text {
        margin: 0;
        padding: 0;
        padding-right: 0;
    }

</style>

<h3 id="MoviesTitleIndex">Movies</h3>

@if (moviesList != null && moviesList.Search != null)
{
    <div class="container">
        <div class="row">
            @foreach (var movie in moviesList.Search)
            {

                <div id="posters" class="col-md-4">
                    <img src="@movie.Poster" class="img-fluid" />
                    <table class="table">
                        <div>
                        <tr>
                            <th style="margin-right: 0;" class="card-text">@movie.Title</th>
                                <th> - </th>
                            <th class="card-text">@movie.Type</th>
                                <th> - </th>
                            <th class="card-text">@movie.Year</th>
                        </tr>
                </div>
                    </table>
                </div>
            }
        </div>
    </div>
}

