@page "/searchresults"
@using SEP6.Data;
@using SEP6.Models;
@using SEP6.Pages.Components

<h3>SearchResults</h3>

@if (moviesList != null && moviesList.Search != null)
{
    <div class="container">
        <div class="row">
            @foreach (var movie in moviesList.Search)
            {

                <div id="posters" class="col-md-4">
                    <img src="@movie.Poster" class="img-fluid" />
                    <table class="table">
                        <div>
                            <tr>
                                <th style="margin-right: 0;" class="card-text">@movie.Title</th>
                                <th> - </th>
                                <th class="card-text">@movie.Type</th>
                                <th> - </th>
                                <th class="card-text">@movie.Year</th>
                            </tr>
                        </div>
                    </table>
                </div>
            }
        </div>
    </div>
    }
@code {
    public OMDBResult moviesList { get; set; }
    public OMDBResult movieTitles { get; set; }
    public MoviesOMDB moviesOMDB { get; set; }
    public MovieService movieService { get; set; }

    protected override async Task OnInitializedAsync()
    {
        try
        {
            string title = "The Room";
            moviesList = await movieService.GetPosterForMovie(title);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error: {ex.Message}");
        }
    }
}
